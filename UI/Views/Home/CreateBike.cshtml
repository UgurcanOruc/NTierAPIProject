@model DATA.Entities.Bike

@{
    ViewData["Title"] = "CreateBike";
    var stationSelectList = (List<SelectListItem>)ViewBag.StationSelectList;
    var YesNoSelectList = new List<SelectListItem>();
    YesNoSelectList.Add(new SelectListItem() { Text = "Yes", Value = "1" });
    YesNoSelectList.Add(new SelectListItem() { Text = "No", Value = "0" });
}

<h1>CreateBike</h1>

<h4>Bike</h4>
<hr />
<div class="row">
    <form asp-action="CreateBike">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6 ml-0">
            <div class="form-group mb-2">
                <label asp-for="BikeId" class="form-label"></label>
                <input asp-for="BikeId" class="form-control" required/>
                <span asp-validation-for="BikeId" class="text-danger"></span>
            </div>
            <div class="form-group  mb-2">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="StationId" class="form-label"></label>
                @Html.DropDownListFor(m => m.StationId, stationSelectList, "Select Station", new { @class="form-control", @required = "required"})
                <span asp-validation-for="StationId" class="text-danger"></span>

            </div>
            <div class="form-group  mb-2">
                <label asp-for="IsDisabled" class="form-label"></label>
                @Html.DropDownListFor(m => m.IsDisabled, YesNoSelectList, "Select...", new { @class="form-control" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-2">
                <label asp-for="Longitude" class="form-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Latitude" class="form-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="IsReversed" class="form-label"></label>
                @Html.DropDownListFor(m => m.IsReversed, YesNoSelectList, "Select...", new { @class="form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 d-flex justify-content-between">
                <a class="btn btn-info" asp-action="Index">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
